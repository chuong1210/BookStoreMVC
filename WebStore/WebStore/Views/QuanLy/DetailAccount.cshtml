@model WebStore.Models.NguoiDungDTO

@{
    ViewData["Title"] = "DetailAccount";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1>DetailAccount</h1>

<div>
    <h4>Account</h4>
    <hr />
    <div class="row">
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </div>
        <div class="col-sm-10">
            @if (Model.Gender == 1)
            {
                @:Nam
            }
            else
            {
                @:Nữ
            }
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Authority)
        </div>
        <div class="col-sm-10">
            @if (Model.Authority == 1)
            {
                @:Admin
            }
            else if (Model.Authority == 2)
            {
                @:SuperAdmin
            }
            else if(Model.Authority == 0)
            {
                @:Customer
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "EditAccount", new { id = Model.UserName }) |
    <a asp-action="ManagerAccount">Back to List</a>
</div>
