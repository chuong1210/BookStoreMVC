@using WebStore.Models
@model dynamic

@{
    ViewData["Title"] = "EditBook";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2>Sửa Sách</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="/images/@Model.book.Image" class="img-fluid" alt="">
    </div>
    <div class="col-md-8">
        <form asp-action="EditBook" enctype="multipart/form-data">
            <span data-valmsg-for="BookName" class="text-danger field-validation-error" data-valmsg-replace="true">@ViewBag.ErrorMessage</span>
            <div class="form-group">
                <label for="BookName" class="control-label">Tên sách </label>
                <input name="BookName" type="text" class="form-control" placeholder="Tên sách" value="@Model.book.BookName">
            </div>
            <div class="form-group">
                <label for="BookTypeID" class="control-label">Loại sách</label>
                <select name="BookTypeID" class="form-control">
                    @foreach (var item in Model.booktypeNAV)
                    {
                        <option  value="@item.BookTypeID">@item.BookTypeName</option>
                    }
                </select>
                <span data-valmsg-for="BookTypeID" class="text-danger field-validation-error" data-valmsg-replace="true"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Author" class="control-label">Tác giả</label>
                    <select name="AuthorId" style="max-height: 260px;max-width:250px" class="form-control" 
@*                     asp-items="Model.TGs"
 *@                    >
                        <option value="">Chọn tác giả</option>
                        @foreach (var item in Model.TGs)
                        {
                            <option value="@item.IdTG">@item.TenTacGia</option>
                        }
                   
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="Nxb" class="control-label">Nhà xuất bản</label>
                    <select name="NXBId" class="form-control selectpicker " data-dropup-auto="false" style="max-height: 260px;max-width:200px">
                        <option value="">Chọn nhà xuất bản</option>  <!--Thêm option mặc định-->
                        @foreach (var item in Model.NXBs)
                        {
                            <option value="@item.IdNXB">@item.Ten</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="Image" class="control-label">Image</label>
                <input name="Image" type="file" accept="image/png, image/jpeg, image/jpg" class="form-control-file">
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">Mô tả</label>
                <textarea name="Description" type="text" class="form-control" placeholder="Mô tả"> @Model.book.Description</textarea>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="Price" class="control-label">Price</label>
                    <input name="Price" type="number" class="form-control" value="@Model.book.Price">
                </div>
                <div class="form-group col-md-4">
                    <label for="Quantity" class="control-label">Quantity</label>
                    <input name="Quantity" type="number" class="form-control" value="@Model.book.Quantity">
                </div>
                <div class="form-group col-md-4">
                    <label for="Ordered" class="control-label">Ordered</label>
                    <input name="Ordered" type="number" class="form-control" value="@Model.book.OrderedQuantity">
                </div>
            </div>
            <button type="submit" class="btn btn-outline-success">Edit</button>
            <br />
            <hr />
            <div>
                <a class="button" asp-action="ManagerBook">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManagerBook">Back to List</a>
</div>

